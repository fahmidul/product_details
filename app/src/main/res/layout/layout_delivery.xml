<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray_CECECE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgFastDelivery"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/fast_delivery"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hr1"
        app:tint="@color/black_4D4D4D" />

    <TextView
        android:id="@+id/tvShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/shipping"
        android:textColor="@color/black_515151"
        app:layout_constraintBottom_toBottomOf="@+id/imgFastDelivery"
        app:layout_constraintLeft_toRightOf="@id/imgFastDelivery"
        app:layout_constraintTop_toBottomOf="@+id/hr1"
        app:layout_constraintTop_toTopOf="@+id/imgFastDelivery" />

    <TextView
        android:id="@+id/tvDeliveryEta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/estimated_delivery"
        android:textColor="@color/gray_999999"
        app:layout_constraintBottom_toBottomOf="@+id/tvShipping"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvShipping" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/product_image_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDeliveryEta">

        <TextView
            android:id="@+id/tvDeliveryMethodName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="zDrop Premium Shipping"
            android:textColor="@color/black_515151" />


        <TextView
            android:id="@+id/tvDeliveryCost"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/imgDropDown"
            android:gravity="center_vertical"
            android:text="Cost: BDT. 4000"
            android:textColor="@color/black_515151" />


        <ImageView
            android:id="@+id/imgDropDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/drop_down"
            app:tint="@color/black_515151"
            android:padding="5dp"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>